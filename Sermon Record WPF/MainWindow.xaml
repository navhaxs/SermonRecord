<Window x:Class="Sermon_Record.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sermon_Record"
        xmlns:localutil="clr-namespace:Sermon_Record.UTIL"
        mc:Ignorable="d"
        Title="Sermon Recorder" MinHeight="270" MinWidth="710" Height="270" Width="710" Background="{DynamicResource StoppedBackground}" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Icon="app.ico">
    <Window.Resources>
        <SolidColorBrush x:Key="StoppedBackground" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="DarkForeground" Color="White"/>
        <SolidColorBrush x:Key="RecordingRedAccent" Color="#FFFF3434"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:BooleanToVisibilityConverter 
        x:Key="BooleanToVisibilityConverter" 
        True="Collapsed" 
        False="Visible" />
        <Storyboard x:Key="animateBackground">
            <ColorAnimation To="#FF575C60" 
                                    Storyboard.TargetProperty="(Window.Background).(SolidColorBrush.Color)" 
                                    FillBehavior="HoldEnd" 
                                    Duration="0:0:0.5"/>
        </Storyboard>
        <Storyboard x:Key="animateBackgroundReturn">
            <ColorAnimation To="#FFF4F4F4" 
                                    Storyboard.TargetProperty="(Window.Background).(SolidColorBrush.Color)" 
                                    FillBehavior="HoldEnd" 
                                    Duration="0:0:1.0"/>
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="root">



        <DockPanel>

            <Label DockPanel.Dock="Bottom" x:Name="lblMicProblem" Content="No input signal! Check correct recording device is selected in Setup" Margin="0" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" Background="#FFE85959" Foreground="White" Visibility="Visible" Padding="10"/>

            <ProgressBar Background="Red" Style="{DynamicResource progressbarVU}" DockPanel.Dock="Left" x:Name="lblPeakValue" Orientation="Vertical" Width="10" Minimum="0" Maximum="66" />
            <Viewbox>
            <Grid Margin="50 10 50 10">
                <!--<local:RippleEffectDecorator Background="Transparent" HighlightBackground="Red" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
            </local:RippleEffectDecorator>-->


                <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                    <!--<ToggleButton ToolTip="Pause recording" Visibility="Collapsed"
                    Margin="20 0" DockPanel.Dock="Right" Grid.Column="1" x:Name="finishButton" Style="{StaticResource circlularToggleButton}" Foreground="White" Width="80" VerticalAlignment="Center" Height="80"
                    Background="#FFA2A2A2">
                        <Viewbox>
                            <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="appbar_control_pause" Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                                <Path Width="22.1667" Height="28.5" Canvas.Left="26.9167" Canvas.Top="23.75" Stretch="Fill" Fill="White" Data="F1 M 26.9167,23.75L 33.25,23.75L 33.25,52.25L 26.9167,52.25L 26.9167,23.75 Z M 42.75,23.75L 49.0833,23.75L 49.0833,52.25L 42.75,52.25L 42.75,23.75 Z "/>
                            </Canvas>
                        </Viewbox>
                    </ToggleButton>-->

                        <Grid DockPanel.Dock="Top" Visibility="{Binding IsChecked, ElementName=recordButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Height="20" />
                        <TextBlock Margin="0 10 0 0" DockPanel.Dock="Bottom" FontSize="32"
                        Visibility="{Binding IsChecked, ElementName=recordButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Foreground="#FFFF3434" VerticalAlignment="Bottom" FontWeight="Bold" FontFamily="Consolas" HorizontalAlignment="Center" >
                        <Run Text="REC" />
                    </TextBlock>
                    <ToggleButton ToolTip="Start recording / Stop recording" IsEnabled="False"
 DockPanel.Dock="Right" Grid.Column="1" x:Name="recordButton" Style="{StaticResource circlularToggleButton}" Foreground="White" Width="120" VerticalAlignment="Center" Height="120" Click="Button_Click"
                              IsChecked="{Binding Path=myrecorder.IsRecording, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Background="#FFFF3434">
                        <Viewbox>
                            <Grid>

                                <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="appbar_microphone" Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0" Visibility="{Binding IsChecked, ElementName=recordButton, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Path Width="28.5" Height="38" Canvas.Left="23.75" Canvas.Top="19.0001" Stretch="Fill" Fill="White" Data="F1 M 38,19.0001C 41.4978,19.0001 44.3333,21.8356 44.3333,25.3334L 44.3333,36.4167C 44.3333,39.9145 41.4978,42.75 38,42.75C 34.5022,42.75 31.6666,39.9145 31.6666,36.4167L 31.6666,25.3334C 31.6666,21.8356 34.5022,19.0001 38,19.0001 Z M 30.0833,52.25L 34.8333,52.25L 34.8333,50.3136C 28.4874,48.8736 23.75,43.1984 23.75,36.4167L 23.75,31.6667L 28.5,31.6667L 28.5,36.4167C 28.5,41.6634 32.7533,45.9167 38,45.9167C 43.2467,45.9167 47.5,41.6634 47.5,36.4167L 47.5,31.6667L 52.25,31.6667L 52.25,36.4167C 52.25,43.1984 47.5126,48.8736 41.1667,50.3136L 41.1667,52.25L 45.9167,52.25L 45.9167,57L 30.0833,57L 30.0833,52.25 Z "/>
                                </Canvas>

                                <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="appbar_control_stop" Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0"
                                    Visibility="{Binding IsChecked, ElementName=recordButton, Converter={StaticResource BoolToVisConverter}}">
                                    <Rectangle Width="28.5" Height="28.5" Canvas.Left="23.75" Canvas.Top="23.75" Stretch="Fill" Fill="White"/>
                                </Canvas>
                            </Grid>
                        </Viewbox>
                    </ToggleButton>
                    <Grid VerticalAlignment="Center">
                        <StackPanel Margin="0,0,50,0"  Visibility="{Binding IsChecked, ElementName=recordButton, Converter={StaticResource BoolToVisConverter}}">

                            <TextBlock Foreground="White" Text="{Binding myrecorder.GetElapsedTimeFormatted, FallbackValue='00:00:00', Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="72" FontFamily="Consolas"/>
                            <TextBlock Foreground="White" FontSize="18">
                            <Run Text="Now recording" />
                            </TextBlock>
                            <TextBlock Foreground="White" FontSize="16">
                            <Run Text="Buffer file size:" />
                            <Run x:Name="BufferFileSizeText" Text="0MB"/>
                            </TextBlock>

                        </StackPanel>
                        <Ellipse Visibility="Collapsed" x:Name="MsgBorder" Fill="#FFFF3434" HorizontalAlignment="Left" Height="30" Width="30" DockPanel.Dock="Bottom" Opacity="1" Margin="30,0,0,0">
                            <Ellipse.Style>
                                <Style TargetType="{x:Type Ellipse}">
                                    <Style.Triggers>
                                        <Trigger Property="Visibility" Value="Visible">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation AutoReverse="True" RepeatBehavior="Forever" Storyboard.TargetProperty="Opacity" Duration="00:00:01.00" To="0.3" ></DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>

                    </Grid>

                    </DockPanel>
                    
            </Grid>
            </Viewbox>


        </DockPanel>


        <ToggleButton x:Name="pinBtn" 
                      ToolTip="Pin window to top"
                     Margin="0,1,1,0" Style="{StaticResource circlularToggleButton}" Foreground="White" Width="32" VerticalAlignment="Top" Height="32"
                     Background="{x:Null}" Checked="ToggleButton_Checked" Unchecked="pinBtn_Unchecked" HorizontalAlignment="Right">
            <Viewbox>
                <Grid>
                    <Ellipse Visibility="{Binding IsChecked, ElementName=pinBtn, Converter={StaticResource BoolToVisConverter}}" Fill="#4CA5A5A5" />
                    <Canvas
                                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="appbar_pin" Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                        <Path Width="36.271" Height="36.2948" Canvas.Left="19.8645" Canvas.Top="19.8526" Stretch="Fill" Fill="#FFA3A3A3" Data="F1 M 56.1355,32.5475L 43.4466,19.8526C 42.7886,20.4988 42.298,21.2123 41.9749,21.9932C 41.6519,22.7741 41.4903,23.5729 41.4903,24.3895C 41.4903,25.1942 41.6529,25.987 41.9779,26.7679L 34.0577,34.6821C 33.3918,34.3372 32.6991,34.0776 31.9796,33.9032C 31.2601,33.7288 30.5298,33.6415 29.7885,33.6415C 28.623,33.6415 27.4953,33.8526 26.4052,34.2748C 25.315,34.697 24.3419,35.3342 23.4856,36.1865L 30.2344,42.9174L 25.9027,47.9032L 22.6532,51.8425L 20.5988,54.5836C 20.1212,55.2892 19.8823,55.753 19.8823,55.975L 19.8645,56.0701L 19.9002,56.088L 19.9002,56.1474L 19.9358,56.1058L 20.0131,56.1236C 20.2351,56.1236 20.6989,55.8888 21.4045,55.419L 24.1457,53.3765L 28.0849,50.1151L 33.0945,45.7775L 39.8016,52.5025C 40.6579,51.6462 41.2961,50.6731 41.7163,49.5829C 42.1365,48.4928 42.3466,47.367 42.3466,46.2056C 42.3466,45.4603 42.2603,44.729 42.0879,44.0115C 41.9155,43.294 41.6548,42.6003 41.3069,41.9304L 49.2202,34.0161C 50.0011,34.3372 50.7939,34.4978 51.5986,34.4978C 52.4192,34.4978 53.2189,34.3362 53.9979,34.0132C 54.7768,33.6901 55.4894,33.2015 56.1355,32.5475 Z "/>
                    </Canvas>
                </Grid>
            </Viewbox>
        </ToggleButton>
        <Button DockPanel.Dock="Right" VerticalAlignment="Top" Margin="0 4 40 0" MinHeight="28" BorderThickness="1" Style="{StaticResource MetroButton}" Padding="20,0" HorizontalAlignment="Right" Visibility="{Binding IsChecked, ElementName=recordButton, Converter={StaticResource BooleanToVisibilityConverter}}" Click="Setup_Button_Click" ToolTip="Change recording options" Content="Setup" Background="{x:Null}" Foreground="#FF545454" />
    </Grid>
</Window>
